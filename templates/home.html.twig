{% extends "base.html.twig" %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}

	<h1>Nos produits phares</h1>
	<div class="row">
		{% for product in products %}
			<div class="col">
				<div class="card">
					<img src="{{product.mainPicture}}" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h4 class="card title">{{product.name}}
							({{product.price}}€)</h4>
						<span class="badge rounded-pill bg-info">{{product.category.name}}</span>
						<p>{{product.shortDescription}}</p>
						<a href="#" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<hr>
	<h2>Un service irreprochable</h2>
	<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Blanditiis, tenetur dolorem asperiores amet eum deleniti?</p>

	<div class="row">
		{% include "shared/_assurance.html.twig" with {
            'color':'primary',
            'icon': 'fas fa-truck',
            'text': 'Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ab quo quasi placeat, quae eius iste!'
            }%}
		{% include "shared/_assurance.html.twig" with {
            'color':'success',
            'icon': 'fas fa-check',
            'text': 'Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ab quo quasi placeat, quae eius iste!'
            }%}
		{% include "shared/_assurance.html.twig" with {
            'color':'warning',
            'icon': 'fas fa-lock',
            'text': 'Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ab quo quasi placeat, quae eius iste!'
            }%}

	</div>

{% endblock %}
